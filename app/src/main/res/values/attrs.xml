<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--公共属性-->
    <attr name="textColor" format="color"/>
    <attr name="textSize" format="dimension"/>

    <!--自定义MTextView的属性-->
    <declare-styleable name="MTextView">
        <attr name="mText" format="string"/>
        <attr name="mTextColor" format="color"/>
        <attr name="mTextSize" format="dimension"/>
    </declare-styleable>

    <!--自定义MImageView的属性-->
    <declare-styleable name="MImageView">
        <attr name="text" format="string"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="imageSrc" format="reference"/>
        <attr name="scaleType" format="enum">
            <enum name="fillXY" value="0" />
            <enum name="center" value="1" />
        </attr>
    </declare-styleable>

    <!--自定义MCycleView的属性-->
    <declare-styleable name="MCycleView">
        <attr name="firstColor" format="color"/>
        <attr name="secondColor" format="color"/>
        <attr name="textColor"/>
        <attr name="cycleWidth" format="dimension"/>
        <attr name="textSize"/>
        <attr name="speed" format="integer"/>
        <attr name="progress" format="integer"/>
        <attr name="textStrokeWidth" format="dimension"/>
        <attr name="cycleStrokeWidth" format="dimension"/>
        <attr name="style" format="enum">
            <enum name="fill" value="0" />
            <enum name="stroke" value="1" />
            <enum name="fill_stroke" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="FlowLayout">
        <attr name="horizontalSpacing" format="dimension"/>
        <attr name="verticalSpacing" format="dimension"/>
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="debugDraw" format="boolean" />
    </declare-styleable>
    <declare-styleable name="FlowLayout_LayoutParams">
        <attr name="layout_newLine" format="boolean"/>
        <attr name="layout_horizontalSpacing" format="dimension"/>
        <attr name="layout_verticalSpacing" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="CircleProgressBar">
        <attr name="back_color" format="color"/>
        <attr name="inner_color" format="color"/>
        <attr name="gradient_start" format="color"/>
        <attr name="gradient_middle1" format="color"/>
        <attr name="gradient_middle2" format="color"/>
        <attr name="gradient_end" format="color"/>
        <attr name="diameter" format="dimension"/>
        <attr name="back_width" format="dimension"/>
        <attr name="front_width" format="dimension"/>
        <attr name="point_radius" format="dimension"/>
        <attr name="is_need_title" format="boolean"/>
        <attr name="is_need_content" format="boolean"/>
        <attr name="is_need_unit" format="boolean"/>
        <attr name="string_title" format="string"/>
        <attr name="string_unit" format="string"/>
        <attr name="current_value" format="float"/>
        <attr name="max_value" format="float"/>
        <attr name="progress_style" format="enum">
            <enum name="progress" value="0"/>
            <enum name="step"  value="1"/>
            <enum name="speed" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="SnakeProgressBar">
        <attr name="total_line_color" format="color"/>
        <attr name="total_text_color" format="color"/>
        <attr name="passed_line_color" format="color"/>
        <attr name="passed_text_color" format="color"/>
        <attr name="current_circle_color" format="color"/>
        <attr name="total_step" format="integer"/>
        <attr name="current_step" format="integer"/>
        <attr name="max_step" format="integer"/>
        <attr name="terminal_radius" format="dimension"/>
        <attr name="normal_radius" format="dimension"/>
        <attr name="text_size" format="dimension"/>
        <attr name="line_width" format="dimension"/>
        <attr name="horizontal_space" format="dimension"/>
        <attr name="icon_start_on" format="reference"/>
        <attr name="icon_end_on" format="reference"/>
        <attr name="icon_start_off" format="reference"/>
        <attr name="icon_end_off" format="reference"/>
    </declare-styleable>
</resources>
